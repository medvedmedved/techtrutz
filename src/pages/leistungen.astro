---
import BaseLayout from '../layouts/BaseLayout.astro';
import { site } from '../data/site';

const services = [
  {
    title: 'Computer Reparatur',
    text: 'Fehlerdiagnose, Hardwaretausch, Datenrettung und Systemoptimierung — schnell und zuverlässig.',
    icon: 'repair',
    color: 'from-red-400 to-rose-600',
    bg: 'bg-red-50 text-red-700',
    points: ['Hardwarefehler & Komponentencheck', 'Datensicherung & Datenrettung', 'Betriebssystem-Neuinstallation']
  },
  {
    title: 'PC & Laptop Einrichtung',
    text: 'Neuinstallation, Einrichtung von Benutzerkonten, E-Mail, Druckern, Sicherheitssoftware und Backup.',
    icon: 'laptop',
    color: 'from-blue-400 to-indigo-600',
    bg: 'bg-blue-50 text-blue-700',
    points: ['Windows & macOS Einrichtung', 'Drucker, Scanner & Peripherie', 'Backup-Strategie & Automatisierung']
  },
  {
    title: 'Netzwerk & WLAN',
    text: 'Stabile Heim- und Büronetzwerke mit sauberer Abdeckung, sicherer Konfiguration und Dokumentation.',
    icon: 'wifi',
    color: 'from-emerald-400 to-teal-600',
    bg: 'bg-emerald-50 text-emerald-700',
    points: ['Router- & Mesh-Konfiguration', 'WLAN-Ausleuchtung & Optimierung', 'VPN & Firewall-Grundschutz']
  },
  {
    title: 'Server & NAS Setup',
    text: 'Einrichtung von lokalen Servern und NAS-Systemen inklusive Rechtekonzept, Backup und Monitoring.',
    icon: 'server',
    color: 'from-violet-400 to-purple-600',
    bg: 'bg-violet-50 text-violet-700',
    points: ['NAS-Systeme (Synology, QNAP)', 'Dateirechte & Benutzerverwaltung', 'Automatische Backups & Monitoring']
  },
  {
    title: 'IT-Support & Fernwartung',
    text: 'Laufende Betreuung für Privatpersonen und kleine Unternehmen per Fernwartung und Vor-Ort.',
    icon: 'support',
    color: 'from-amber-400 to-orange-500',
    bg: 'bg-amber-50 text-amber-700',
    points: ['Schnelle Fernwartung per Secure-Tool', 'Regelmäßige Systemchecks', 'Vor-Ort-Service nach Vereinbarung']
  },
  {
    title: 'Website Erstellung',
    text: 'Moderne, schnelle und wartbare Websites für kleine Unternehmen mit Fokus auf Performance und Sichtbarkeit.',
    icon: 'web',
    color: 'from-cyan-400 to-accent-600',
    bg: 'bg-cyan-50 text-cyan-700',
    points: ['Performante statische Websites', 'SEO-Grundoptimierung', 'Pflege & regelmäßige Updates']
  },
  {
    title: 'IT-Beratung',
    text: 'Unabhängige Beratung zu Infrastruktur, Sicherheit, Lizenzierung und sinnvollen Investitionen.',
    icon: 'guide',
    color: 'from-slate-400 to-slate-600',
    bg: 'bg-slate-100 text-slate-700',
    points: ['Unabhängige Technologieempfehlung', 'Budgetplanung & Priorisierung', 'Dokumentation & Handlungsplan']
  }
];
---

<BaseLayout
  title={`Leistungen | ${site.name}`}
  description="Detaillierte IT-Leistungen von TechTrutz: Reparatur, Einrichtung, Netzwerke, Server, Websites und IT-Support."
  path="/leistungen"
>
  <section class="container-page py-16">

    <!-- Page hero -->
    <div class="card card-glow relative overflow-hidden p-8 sm:p-12">
      <div class="pointer-events-none absolute right-0 top-0 -z-10 h-64 w-64 rounded-bl-full bg-gradient-to-bl from-accent-100/60 to-transparent"></div>
      <span class="mb-5 inline-flex items-center gap-2 rounded-full border border-accent-200 bg-accent-50 px-4 py-1.5 text-xs font-bold uppercase tracking-widest text-accent-700">
        <span class="h-2 w-2 rounded-full bg-accent-500 animate-pulse-slow"></span>
        <span>Modulare IT-Dienste</span>
      </span>
      <h1 class="text-4xl font-bold sm:text-5xl" data-i18n="page.services.title">Unsere Leistungen</h1>
      <p class="mt-4 max-w-2xl text-lg text-slate-600" data-i18n="page.services.text">
        TechTrutz bietet modulare IT-Dienstleistungen für private Haushalte und kleine Unternehmen in Deutschland.
      </p>
    </div>

    <!-- Services grid -->
    <div class="mt-8 grid gap-5 md:grid-cols-2 lg:grid-cols-3">
      {
        services.map((service) => (
          <article class="card group relative overflow-hidden p-6 transition-all hover:-translate-y-0.5 hover:shadow-card-hover">
            <!-- Accent top bar -->
            <div class={`absolute left-0 top-0 h-0.5 w-full bg-gradient-to-r ${service.color}`}></div>

            <!-- Icon -->
            <span class={`inline-flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br ${service.color} text-white shadow-glow`}>
              {service.icon === 'repair' && (
                <svg viewBox="0 0 24 24" class="h-6 w-6" aria-hidden="true">
                  <path fill="currentColor" d="M13.7 2.3C13.1 2.1 12.5 2 12 2a8 8 0 00-8 8c0 1.8.6 3.5 1.7 4.9L2 19.6 4.4 22l4.7-3.7A8 8 0 0012 20a8 8 0 000-16 8 8 0 001.7.3zM12 18a6 6 0 110-12 6 6 0 010 12zm1-8h-2v2H9v2h2v2h2v-2h2v-2h-2z"/>
                </svg>
              )}
              {service.icon === 'laptop' && (
                <svg viewBox="0 0 24 24" class="h-6 w-6" aria-hidden="true">
                  <path fill="currentColor" d="M4 6h16v10H4zm-2 11h20v2H2zm3-9v7h14V8zm2 1h10v5H7z"/>
                </svg>
              )}
              {service.icon === 'wifi' && (
                <svg viewBox="0 0 24 24" class="h-6 w-6" aria-hidden="true">
                  <path fill="currentColor" d="M12 18a2 2 0 110 4 2 2 0 010-4zm0-4a6 6 0 014.2 1.8l-1.4 1.4a4 4 0 00-5.6 0l-1.4-1.4A6 6 0 0112 14zm0-4a10 10 0 017 2.9l-1.4 1.4a8 8 0 00-11.2 0L5 12.9A10 10 0 0112 10zm0-4c3.8 0 7.2 1.6 9.6 4.1l-1.4 1.4A12 12 0 0012 8a12 12 0 00-8.2 3.5L2.4 10.1A14 14 0 0112 6z"/>
                </svg>
              )}
              {service.icon === 'server' && (
                <svg viewBox="0 0 24 24" class="h-6 w-6" aria-hidden="true">
                  <path fill="currentColor" d="M3 4h18a1 1 0 011 1v4a1 1 0 01-1 1H3a1 1 0 01-1-1V5a1 1 0 011-1zm0 10h18a1 1 0 011 1v4a1 1 0 01-1 1H3a1 1 0 01-1-1v-4a1 1 0 011-1zm3-7a1 1 0 100 2 1 1 0 000-2zm0 10a1 1 0 100 2 1 1 0 000-2zm3-10a1 1 0 100 2 1 1 0 000-2zm0 10a1 1 0 100 2 1 1 0 000-2z"/>
                </svg>
              )}
              {service.icon === 'support' && (
                <svg viewBox="0 0 24 24" class="h-6 w-6" aria-hidden="true">
                  <path fill="currentColor" d="M12 2a9 9 0 00-9 9v5a3 3 0 003 3h3v-8H5v-1a7 7 0 0114 0v1h-4v8h3a3 3 0 003-3v-5a9 9 0 00-9-9z"/>
                </svg>
              )}
              {service.icon === 'web' && (
                <svg viewBox="0 0 24 24" class="h-6 w-6" aria-hidden="true">
                  <path fill="currentColor" d="M3 4h18a1 1 0 011 1v14a1 1 0 01-1 1H3a1 1 0 01-1-1V5a1 1 0 011-1zm1 2v3h16V6zm0 5v8h16v-8zm2 2h4v2H6zm6 0h6v2h-6z"/>
                </svg>
              )}
              {service.icon === 'guide' && (
                <svg viewBox="0 0 24 24" class="h-6 w-6" aria-hidden="true">
                  <path fill="currentColor" d="M12 2a10 10 0 110 20A10 10 0 0112 2zm0 2a8 8 0 100 16A8 8 0 0012 4zm0 3a1.5 1.5 0 110 3 1.5 1.5 0 010-3zm-.5 4h1a.5.5 0 01.5.5V17h-2v-5.5a.5.5 0 01.5-.5z"/>
                </svg>
              )}
            </span>

            <h2 class="mt-4 text-xl font-bold">{service.title}</h2>
            <p class="mt-2 text-sm leading-relaxed text-slate-600">{service.text}</p>

            <!-- Bullet points -->
            <ul class="mt-4 space-y-1.5">
              {service.points.map((point) => (
                <li class="flex items-center gap-2 text-sm text-slate-700">
                  <span class={`flex h-4 w-4 shrink-0 items-center justify-center rounded-full bg-gradient-to-br ${service.color} text-white`}>
                    <svg viewBox="0 0 24 24" class="h-2.5 w-2.5" aria-hidden="true"><path fill="currentColor" d="M9 12l2 2 4-4"/></svg>
                  </span>
                  {point}
                </li>
              ))}
            </ul>
          </article>
        ))
      }
    </div>

    <!-- CTA banner -->
    <div class="mt-12 card p-7 sm:p-8 flex flex-col items-start gap-4 sm:flex-row sm:items-center sm:justify-between">
      <div>
        <h2 class="text-2xl font-bold">Nicht das Richtige dabei?</h2>
        <p class="mt-1 text-slate-600">Kontaktieren Sie uns — wir finden gemeinsam eine Lösung.</p>
      </div>
      <a href="/kontakt" class="btn-primary shrink-0 focus-ring">
        <svg viewBox="0 0 24 24" class="h-4 w-4" aria-hidden="true"><path fill="currentColor" d="M3 5h18v14H3zm2 2v.5l7 4 7-4V7l-7 4z"/></svg>
        <span>Jetzt anfragen</span>
      </a>
    </div>

  </section>
</BaseLayout>
