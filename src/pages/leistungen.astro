---
import BaseLayout from '../layouts/BaseLayout.astro';
import { site } from '../data/site';

const services = [
  {
    title: 'Computer Reparatur',
    text: 'Fehlerdiagnose, Hardwaretausch, Datenrettung im Rahmen technischer Möglichkeiten und Systemoptimierung.',
    icon: 'repair'
  },
  {
    title: 'PC & Laptop Einrichtung',
    text: 'Neuinstallation, Einrichtung von Benutzerkonten, E-Mail, Druckern, Sicherheitssoftware und Backup.',
    icon: 'laptop'
  },
  {
    title: 'Netzwerke (WLAN, Router, Mesh)',
    text: 'Stabile Heim- und Büronetzwerke mit sauberer Abdeckung, sicherer Konfiguration und nachvollziehbarer Dokumentation.',
    icon: 'wifi'
  },
  {
    title: 'Server & NAS Setup',
    text: 'Einrichtung von lokalen Servern und NAS-Systemen inklusive Rechtekonzept, Backup-Strategie und Monitoring-Basis.',
    icon: 'server'
  },
  {
    title: 'IT-Support',
    text: 'Laufende Betreuung für Privatpersonen und kleine Unternehmen per Fernwartung und Vor-Ort-Service.',
    icon: 'support'
  },
  {
    title: 'Website Erstellung',
    text: 'Moderne, schnelle und wartbare Websites für kleine Unternehmen mit Fokus auf Performance und Sichtbarkeit.',
    icon: 'web'
  },
  {
    title: 'IT-Beratung',
    text: 'Unabhängige Beratung zu Infrastruktur, Sicherheit, Lizenzierung und sinnvollen Investitionen.',
    icon: 'guide'
  }
];
---

<BaseLayout
  title={`Leistungen | ${site.name}`}
  description="Detaillierte IT-Leistungen von TechTrutz: Reparatur, Einrichtung, Netzwerke, Server, Websites und IT-Support."
  path="/leistungen"
>
  <section class="container-page py-16">
    <div class="card card-glow p-7 sm:p-10">
      <h1 class="text-4xl font-bold sm:text-5xl" data-i18n="page.services.title">Unsere Leistungen</h1>
      <p class="mt-4 max-w-3xl text-lg text-slate-700" data-i18n="page.services.text">
        TechTrutz bietet modulare IT-Dienstleistungen für private Haushalte und kleine Unternehmen in Deutschland.
      </p>
    </div>

    <div class="mt-10 grid gap-5 md:grid-cols-2">
      {
        services.map((service) => (
          <article class="card card-glow p-6">
            <span class="inline-flex h-10 w-10 items-center justify-center rounded-lg bg-accent-100 text-accent-700">
              {
                service.icon === 'repair' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M22 19.6L19.6 22l-6.3-6.3a6.5 6.5 0 01-7.9-8.2l3.6 3.6 2.2-2.2-3.6-3.6a6.5 6.5 0 018.2 7.9z"/></svg>
              }
              {
                service.icon === 'laptop' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M4 5h16v10H4zm-2 12h20v2H2z"/></svg>
              }
              {
                service.icon === 'wifi' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M12 18a2 2 0 110 4 2 2 0 010-4m0-4a6 6 0 014.2 1.8l-1.4 1.4a4 4 0 00-5.6 0l-1.4-1.4A6 6 0 0112 14m0-4a10 10 0 017 2.9l-1.4 1.4a8 8 0 00-11.2 0L5 12.9A10 10 0 0112 10"/></svg>
              }
              {
                service.icon === 'server' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M3 4h18v6H3zm0 10h18v6H3zm3-7a1 1 0 100 2 1 1 0 000-2m0 10a1 1 0 100 2 1 1 0 000-2"/></svg>
              }
              {
                service.icon === 'support' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M12 2a9 9 0 00-9 9v5a3 3 0 003 3h3v-8H5v-1a7 7 0 0114 0v1h-4v8h3a3 3 0 003-3v-5a9 9 0 00-9-9"/></svg>
              }
              {
                service.icon === 'web' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M3 4h18v16H3zm2 3v2h14V7zm0 4v7h14v-7z"/></svg>
              }
              {
                service.icon === 'guide' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M12 2a8 8 0 018 8c0 5-8 12-8 12S4 15 4 10a8 8 0 018-8m0 4a4 4 0 100 8 4 4 0 000-8"/></svg>
              }
            </span>
            <h2 class="mt-4 text-2xl font-bold">{service.title}</h2>
            <p class="mt-3 text-slate-700">{service.text}</p>
          </article>
        ))
      }
    </div>
  </section>
</BaseLayout>
