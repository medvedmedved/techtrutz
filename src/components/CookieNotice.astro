<div
  id="cookie-notice"
  class="cookie-notice fixed inset-x-4 bottom-4 z-[60] mx-auto hidden max-w-3xl rounded-2xl border border-slate-200 bg-white p-4 shadow-soft"
  role="dialog"
  aria-label="Cookie Hinweis"
>
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <p class="text-sm text-slate-800" data-i18n="cookie.text">
      Diese Website nutzt nur technisch notwendige Cookies bzw. lokale Speicherung für Grundfunktionen. Es findet kein Tracking statt.
    </p>
    <button
      id="cookie-accept"
      class="focus-ring rounded-xl bg-accent-600 px-4 py-2 text-sm font-semibold text-white hover:bg-accent-700"
      type="button"
      aria-label="Cookie Hinweis bestätigen"
      data-i18n="cookie.ok"
    >
      Verstanden
    </button>
  </div>
</div>

<script>
  const notice = document.getElementById('cookie-notice');
  const acceptButton = document.getElementById('cookie-accept');
  const key = 'techtrutz-cookie-notice-v1';

  if (notice && acceptButton) {
    const accepted = localStorage.getItem(key) === 'accepted';
    if (!accepted) {
      notice.classList.remove('hidden');
    }

    acceptButton.addEventListener('click', () => {
      localStorage.setItem(key, 'accepted');
      notice.classList.add('hidden');
    });
  }
</script>
