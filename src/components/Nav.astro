---
const links = [
  { href: '/', label: 'Startseite', key: 'nav.home', icon: 'home', arcX: '-0.9rem', arcY: '0.95rem' },
  { href: '/leistungen', label: 'Leistungen', key: 'nav.services', icon: 'tool', arcX: '-4.35rem', arcY: '2.85rem' },
  { href: '/ueber-uns', label: 'Über uns', key: 'nav.about', icon: 'users', arcX: '-8.1rem', arcY: '4.5rem' },
  { href: '/kontakt', label: 'Kontakt', key: 'nav.contact', icon: 'chat', arcX: '-11.55rem', arcY: '5.95rem' }
];

const pathname = Astro.url.pathname;
---

<header class="site-header relative sticky top-0 z-50 border-b border-slate-200/80 bg-white/90 backdrop-blur-md">
  <div class="container-page flex h-28 items-center justify-between">
    <a class="focus-ring inline-flex items-center rounded-xl" href="/" aria-label="TechTrutz Startseite">
      <span class="site-logo-switch" aria-hidden="true">
        <img
          src="/logoforwhite-nav.png"
          alt=""
          class="logo-wordmark logo-wordmark-nav site-logo"
          loading="eager"
          fetchpriority="high"
          decoding="async"
          data-theme-logo
          data-logo-light="/logoforwhite-nav.png"
          data-logo-dark="/logoforblack-nav.png"
        />
      </span>
      <span class="sr-only">TechTrutz</span>
    </a>

    <div class="mobile-header-actions md:hidden">
      <button
        class="theme-icon-button focus-ring rounded-lg border border-slate-300 text-slate-700 hover:bg-slate-100"
        type="button"
        aria-label="Farbschema wechseln"
        data-theme-button
      >
        <svg class="theme-icon-moon h-4 w-4" viewBox="0 0 24 24" aria-hidden="true">
          <path fill="currentColor" d="M12.8 3a8.7 8.7 0 100 17.4 9 9 0 01-5.3-8.7A9 9 0 0112.8 3z" />
        </svg>
        <svg class="theme-icon-sun h-4 w-4" viewBox="0 0 24 24" aria-hidden="true">
          <path fill="currentColor" d="M12 4a1 1 0 011 1v1.2a1 1 0 11-2 0V5a1 1 0 011-1m0 12.8a1 1 0 011 1V19a1 1 0 11-2 0v-1.2a1 1 0 011-1M4 11a1 1 0 100 2h1.2a1 1 0 100-2H4m14.8 0a1 1 0 100 2H20a1 1 0 100-2h-1.2M6.3 6.3a1 1 0 011.4 0l.8.8a1 1 0 01-1.4 1.4l-.8-.8a1 1 0 010-1.4m9.2 9.2a1 1 0 011.4 0l.8.8a1 1 0 11-1.4 1.4l-.8-.8a1 1 0 010-1.4M6.3 17.7a1 1 0 010-1.4l.8-.8a1 1 0 011.4 1.4l-.8.8a1 1 0 01-1.4 0m9.2-9.2a1 1 0 010-1.4l.8-.8a1 1 0 011.4 1.4l-.8.8a1 1 0 01-1.4 0M12 8a4 4 0 100 8 4 4 0 000-8z" />
        </svg>
        <span class="sr-only" data-i18n="theme.toggle">Dark</span>
      </button>

      <button
        class="site-mobile-lang-button focus-ring rounded-lg border border-slate-300 text-slate-700 hover:bg-slate-100"
        type="button"
        aria-label="Sprache wechseln"
        data-lang-cycle
      >
        <span data-lang-cycle-label>DE</span>
      </button>

      <button
        id="mobile-menu-button"
        class="site-mobile-menu-button focus-ring rounded-full border border-slate-300 px-3 py-2 text-sm font-medium text-slate-800"
        aria-expanded="false"
        aria-controls="mobile-menu"
        aria-label="Navigationsmenü öffnen"
        type="button"
      >
        <svg class="menu-icon-bars h-5 w-5" viewBox="0 0 24 24" aria-hidden="true">
          <path fill="currentColor" d="M3 6h18v2H3zm0 5h18v2H3zm0 5h18v2H3z" />
        </svg>
        <svg class="menu-icon-close hidden h-5 w-5" viewBox="0 0 24 24" aria-hidden="true">
          <path fill="currentColor" d="M6.7 5.3L5.3 6.7 10.6 12l-5.3 5.3 1.4 1.4 5.3-5.3 5.3 5.3 1.4-1.4-5.3-5.3 5.3-5.3-1.4-1.4-5.3 5.3z" />
        </svg>
        <span class="sr-only" data-i18n="nav.menu">Menü</span>
      </button>
    </div>

    <nav aria-label="Hauptnavigation" class="hidden items-center gap-4 md:flex">
      {
        links.map((link) => (
          <a
            href={link.href}
            class={`focus-ring rounded text-sm font-medium ${
              pathname === link.href ? 'text-accent-700' : 'text-slate-700 hover:text-accent-700'
            }`}
            aria-current={pathname === link.href ? 'page' : undefined}
            data-i18n={link.key}
          >
            {link.label}
          </a>
        ))
      }
      <div class="flex items-center gap-2">
        <div class="inline-flex items-center rounded-lg border border-slate-300 p-1">
          <button class="focus-ring rounded px-2 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-100" type="button" data-lang="de">DE</button>
          <button class="focus-ring rounded px-2 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-100" type="button" data-lang="ru">RU</button>
          <button class="focus-ring rounded px-2 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-100" type="button" data-lang="en">EN</button>
        </div>
        <button
          id="theme-toggle"
          class="theme-icon-button focus-ring rounded-lg border border-slate-300 text-slate-700 hover:bg-slate-100"
          type="button"
          aria-label="Farbschema wechseln"
          data-theme-button
        >
          <svg class="theme-icon-moon h-4 w-4" viewBox="0 0 24 24" aria-hidden="true">
            <path fill="currentColor" d="M12.8 3a8.7 8.7 0 100 17.4 9 9 0 01-5.3-8.7A9 9 0 0112.8 3z" />
          </svg>
          <svg class="theme-icon-sun h-4 w-4" viewBox="0 0 24 24" aria-hidden="true">
            <path fill="currentColor" d="M12 4a1 1 0 011 1v1.2a1 1 0 11-2 0V5a1 1 0 011-1m0 12.8a1 1 0 011 1V19a1 1 0 11-2 0v-1.2a1 1 0 011-1M4 11a1 1 0 100 2h1.2a1 1 0 100-2H4m14.8 0a1 1 0 100 2H20a1 1 0 100-2h-1.2M6.3 6.3a1 1 0 011.4 0l.8.8a1 1 0 01-1.4 1.4l-.8-.8a1 1 0 010-1.4m9.2 9.2a1 1 0 011.4 0l.8.8a1 1 0 11-1.4 1.4l-.8-.8a1 1 0 010-1.4M6.3 17.7a1 1 0 010-1.4l.8-.8a1 1 0 011.4 1.4l-.8.8a1 1 0 01-1.4 0m9.2-9.2a1 1 0 010-1.4l.8-.8a1 1 0 011.4 1.4l-.8.8a1 1 0 01-1.4 0M12 8a4 4 0 100 8 4 4 0 000-8z" />
          </svg>
          <span class="sr-only" data-i18n="theme.toggle">Dark</span>
        </button>
      </div>
      <a href="/kontakt" class="focus-ring rounded-lg bg-ink-900 px-3 py-2 text-sm font-semibold text-white hover:bg-ink-800" data-i18n="nav.cta">Anfrage starten</a>
    </nav>
  </div>

  <nav
    id="mobile-menu"
    aria-label="Mobile Navigation"
    class="site-mobile-menu hidden md:hidden"
    data-open="false"
  >
    <div class="container-page">
      <div class="site-mobile-arc">
        {
          links.map((link, index) => (
            <a
              href={link.href}
              class={`focus-ring site-mobile-menu-link ${
                pathname === link.href ? 'site-mobile-menu-link-active' : ''
              }`}
              aria-current={pathname === link.href ? 'page' : undefined}
              style={`--arc-x: ${link.arcX}; --arc-y: ${link.arcY}; --arc-delay: ${index * 120}ms; --arc-out-delay: ${(links.length - 1 - index) * 90}ms;`}
              data-menu-close
            >
              <span class="site-mobile-menu-icon" aria-hidden="true">
                {link.icon === 'home' && (
                  <svg viewBox="0 0 24 24" class="h-4 w-4">
                    <path fill="currentColor" d="M12 3.5l8 7V20a1 1 0 01-1 1h-5v-6H10v6H5a1 1 0 01-1-1v-9.5l8-7z" />
                  </svg>
                )}
                {link.icon === 'tool' && (
                  <svg viewBox="0 0 24 24" class="h-4 w-4">
                    <path fill="currentColor" d="M21.2 7.3a5.2 5.2 0 01-6.6 6.5l-6.8 6.8a1.8 1.8 0 11-2.5-2.6l6.8-6.8a5.2 5.2 0 016.5-6.5l-3.2 3.2.5 2.2 2.2.5 3.1-3.3z" />
                  </svg>
                )}
                {link.icon === 'users' && (
                  <svg viewBox="0 0 24 24" class="h-4 w-4">
                    <path fill="currentColor" d="M16 11a4 4 0 10-3.9-4A4 4 0 0016 11zM8 11a3 3 0 10-3-3 3 3 0 003 3zm8 2c-2.7 0-8 1.3-8 4v2h16v-2c0-2.7-5.3-4-8-4zM8 13c-2.4 0-6 1.2-6 3.5V19h4v-2c0-1.3.8-2.3 2.1-3z" />
                  </svg>
                )}
                {link.icon === 'chat' && (
                  <svg viewBox="0 0 24 24" class="h-4 w-4">
                    <path fill="currentColor" d="M4 5h16a1 1 0 011 1v10a1 1 0 01-1 1H8l-4 3v-3H4a1 1 0 01-1-1V6a1 1 0 011-1zm2 4v2h12V9H6zm0 4v2h8v-2H6z" />
                  </svg>
                )}
              </span>
              <span data-i18n={link.key}>{link.label}</span>
            </a>
          ))
        }
      </div>
    </div>
  </nav>
</header>

<style>
  #mobile-menu-button[aria-expanded='true'] .menu-icon-bars {
    display: none;
  }

  #mobile-menu-button[aria-expanded='true'] .menu-icon-close {
    display: block;
  }
</style>
