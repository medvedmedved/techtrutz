---
const services = [
  {
    name: 'Computer Reparatur',
    icon: 'repair',
    key: 'services.item1',
    color: 'bg-red-50 text-red-600'
  },
  {
    name: 'PC & Laptop Einrichtung',
    icon: 'laptop',
    key: 'services.item2',
    color: 'bg-blue-50 text-blue-600'
  },
  {
    name: 'Netzwerke einrichten (WLAN, Router, Mesh)',
    icon: 'wifi',
    key: 'services.item3',
    color: 'bg-violet-50 text-violet-600'
  },
  {
    name: 'Server & NAS Setup',
    icon: 'server',
    key: 'services.item4',
    color: 'bg-slate-100 text-slate-600'
  },
  {
    name: 'IT-Support f체r Privat & kleine Unternehmen',
    icon: 'support',
    key: 'services.item5',
    color: 'bg-green-50 text-green-700'
  },
  {
    name: 'Website Erstellung',
    icon: 'web',
    key: 'services.item6',
    color: 'bg-orange-50 text-orange-600'
  },
  {
    name: 'IT-Beratung',
    icon: 'guide',
    key: 'services.item7',
    color: 'bg-accent-100 text-accent-700'
  }
];
---

<section class="stack-panel z-20" aria-labelledby="services-heading">
  <div class="container-page stack-animate">
    <div class="card p-8 sm:p-12">
      <div class="flex items-start justify-between gap-4">
        <div>
          <h2 id="services-heading" class="text-3xl font-bold sm:text-4xl" data-i18n="services.title">Leistungen auf einen Blick</h2>
          <p class="mt-3 max-w-2xl text-slate-600" data-i18n="services.text">Direkte Unterst체tzung vor Ort oder per Fernwartung, transparent und verst채ndlich erkl채rt.</p>
        </div>
      </div>
      <ul class="mt-8 grid gap-3 sm:grid-cols-2 lg:grid-cols-3" aria-label="Leistungsliste">
        {
          services.map((item) => (
            <li class="group card flex items-center gap-4 p-4 text-slate-800 hover:-translate-y-0.5 hover:border-accent-200 hover:shadow-card-hover">
              <span class={`inline-flex h-11 w-11 shrink-0 items-center justify-center rounded-xl ${item.color}`}>
                {
                  item.icon === 'repair' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M22 19.6L19.6 22l-6.3-6.3a6.5 6.5 0 01-7.9-8.2l3.6 3.6 2.2-2.2-3.6-3.6a6.5 6.5 0 018.2 7.9z"/></svg>
                }
                {
                  item.icon === 'laptop' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M4 5h16v10H4zm-2 12h20v2H2z"/></svg>
                }
                {
                  item.icon === 'wifi' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M12 18a2 2 0 110 4 2 2 0 010-4m0-4a6 6 0 014.2 1.8l-1.4 1.4a4 4 0 00-5.6 0l-1.4-1.4A6 6 0 0112 14m0-4a10 10 0 017 2.9l-1.4 1.4a8 8 0 00-11.2 0L5 12.9A10 10 0 0112 10m0-4a14 14 0 019.8 4.1l-1.4 1.4a12 12 0 00-16.8 0l-1.4-1.4A14 14 0 0112 6"/></svg>
                }
                {
                  item.icon === 'server' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M3 4h18v6H3zm0 10h18v6H3zm3-7a1 1 0 100 2 1 1 0 000-2m0 10a1 1 0 100 2 1 1 0 000-2"/></svg>
                }
                {
                  item.icon === 'support' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M12 2a9 9 0 00-9 9v5a3 3 0 003 3h3v-8H5v-1a7 7 0 0114 0v1h-4v8h3a3 3 0 003-3v-5a9 9 0 00-9-9"/></svg>
                }
                {
                  item.icon === 'web' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M3 4h18v16H3zm2 3v2h14V7zm0 4v7h14v-7z"/></svg>
                }
                {
                  item.icon === 'guide' && <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true"><path fill="currentColor" d="M12 2a8 8 0 018 8c0 5-8 12-8 12S4 15 4 10a8 8 0 018-8m0 4a4 4 0 100 8 4 4 0 000-8"/></svg>
                }
              </span>
              <span class="text-sm font-semibold leading-snug" data-i18n={item.key}>{item.name}</span>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
